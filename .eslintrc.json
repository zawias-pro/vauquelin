{
    "extends": [
        "react-app"
    ],
    "globals": {
        "document": "readonly",
        "it": "readonly",
        "test": "readonly",
        "expect": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "semi": ["error", "never"],
        "quotes": ["error", "single"],
        "object-curly-spacing": ["error", "always"],
        "no-unneeded-ternary": "error",
        "no-plusplus": "error",
        "no-nested-ternary": "error",
        "jsx-quotes": ["error", "prefer-double"],
        "indent": ["error", 2],
        "eol-last": ["error", "always"],
        "comma-dangle": ["error", "always-multiline"]
    }
}
